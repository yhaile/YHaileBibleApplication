        android:name="com.yonashaile.yhailebibleapplication.KJVChapterActivity"
       
        android:theme="@style/AppTheme" />
    <activity
        android:name="com.yonashaile.yhailebibleapplication.ASVVerseActivity"
       
        android:theme="@style/AppTheme" />
   
